            $('#secoundCompanyDiv').css('display', 'block');
            $('#secoundAgentDiv').css('display', 'none');
            $('#secoundCompanySelect').val($boxActionDto.SecondCompanyId).trigger("change");
        } else if ($boxActionDto.SecondClientId != null) {
            $('#secoundAcount').val(2);
