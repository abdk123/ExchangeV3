                ExpensiveId: publicExpenses,
                CoinId: coinId,
                Amount: amount,
                Note: note,
                MoneyActionId: $boxActionDto.MoneyActionId
            }, function (data) {
                if (data.Success) {
                    toastr["success"]("تم");
                    emptyForm();
                } else {
                    toastr["error"]("حدثت مشكلة اثناء الحفظ");
                }

            }
